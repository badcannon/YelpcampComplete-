<%- include('../partials/header') %>
<div class="container">
  <h1 class="text-center">Edit Campground : <%=camp.name%></h1>
  <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST"  enctype="multipart/form-data">
   <div class="container" style="width:40%; margin:40px auto; ">
    <div class="form-group"> <input type="text" class="form-control" name="campground[name]" value="<%=camp.name%>" /></div>
   <div class="form-group"><input type="file" class="form-control" name="image" id="image" accept="image/*"/></div>
   <div class="form-group"><input type="text" class="form-control" name="campground[location]" value="<%=camp.location%>" /></div>
   <div class="form-group"><input type="text" class="form-control" name="campground[price]" value="<%=camp.price%>" /></div>   
   <div class="form-group"><input type="text" class="form-control" name="campground[description]" value="<%=camp.description%>" /></div>   
   <div class="form-group"> </div><button type="submit" class="btn btn-primary btn-block btn-lg">Submit</button></div>
</div>
</form>
<a href="/campgrounds">Go Back</a>
</div>
<%- include('../partials/footer') %>
